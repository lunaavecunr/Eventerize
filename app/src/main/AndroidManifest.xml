<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools" package="com.luna.eventerize">

    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-feature android:name="android.hardware.camera" android:required="true" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <application
            android:name=".EventerizeApp"
            android:allowBackup="true"
            android:icon="@mipmap/eventerize"
            android:label="@string/app_name"
            android:roundIcon="@mipmap/eventerize"
            android:supportsRtl="true"
            android:theme="@style/AppTheme">
        <activity android:name=".presentation.ui.activity.AuthActivity">
            <intent-filter android:autoVerify="true">
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
            <intent-filter>
                <action android:name="android.intent.action.VIEW"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <category android:name="android.intent.category.BROWSABLE"/>
                <data
                        android:host="bigoud.games"
                        android:scheme="https" android:pathPrefix="/eventerizeapp"/>
            </intent-filter>
        </activity>
    </application>

</manifest>