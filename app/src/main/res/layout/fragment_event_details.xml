<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".presentation.ui.fragments.EventDetailsFragment"
             xmlns:fab="http://schemas.android.com/apk/res-auto">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize" android:id="@+id/event_detail_toolbar"
                app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"/>

        <ScrollView
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintTop_toBottomOf="@+id/event_detail_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintBottom_toBottomOf="parent"
        >
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:visibility="invisible"
                        android:id="@+id/event_detail_no_image_in_gallery"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@id/divider3"
                >

                    <TextView
                            android:text="@string/event_detail_gallery_no_image_text"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView2" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginTop="24dp"
                            app:layout_constraintTop_toBottomOf="@+id/event_detail_no_image_in_gallery_logo"
                            android:layout_marginStart="16dp" android:layout_marginEnd="16dp" android:gravity="center"/>
                    <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" tools:srcCompat="@mipmap/eventerize"
                            android:id="@+id/event_detail_no_image_in_gallery_logo"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="32dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/event_detail_image_layout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@id/divider"
                        android:layout_marginTop="16dp">
                    <de.hdodenhof.circleimageview.CircleImageView
                            xmlns:app="http://schemas.android.com/apk/res-auto"
                            android:id="@+id/event_detail_event_logo"
                            android:layout_width="@android:dimen/thumbnail_height"
                            android:layout_height="@android:dimen/thumbnail_width"
                            app:civ_border_width="0dp"
                            app:civ_border_color="#FF000000"
                            android:src="@drawable/ic_calendar"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent" app:layout_constraintBottom_toBottomOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                        android:id="@+id/divider"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintStart_toStartOf="@+id/event_detail_layout"
                        app:layout_constraintEnd_toEndOf="@+id/event_detail_layout"
                        app:layout_constraintTop_toBottomOf="@+id/event_detail_image_layout"
                        android:layout_marginTop="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/event_detail_layout"
                        style="@style/Dividers" android:layout_marginBottom="16dp"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/event_detail_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/divider"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintBottom_toTopOf="@id/divider2" android:layout_marginTop="16dp"
                        android:layout_marginBottom="16dp">

                    <TextView
                            android:text=""
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:gravity="center_vertical"
                            android:id="@+id/event_date_label"
                            app:layout_constraintStart_toEndOf="@+id/imageView6"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView6"
                            app:layout_constraintTop_toTopOf="@+id/imageView6"
                            app:layout_constraintEnd_toEndOf="@+id/location_label"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:gravity="center_vertical"
                            android:layout_height="0dp" android:id="@+id/participant_number"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintStart_toEndOf="@+id/imageView7"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView7"
                            app:layout_constraintTop_toTopOf="@+id/imageView7"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/location_label"
                            android:gravity="center_vertical"
                            app:layout_constraintEnd_toEndOf="@+id/participant_number"
                            app:layout_constraintTop_toTopOf="@+id/imageView4"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
                            app:layout_constraintStart_toStartOf="@+id/participant_number"/>
                    <ImageView
                            android:src="@drawable/ic_location_on_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView4"
                            app:layout_constraintStart_toStartOf="@+id/imageView7"
                            app:layout_constraintEnd_toEndOf="@+id/imageView7" android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageView7"/>
                    <ImageView
                            android:src="@drawable/ic_event_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView6" app:layout_constraintStart_toStartOf="@+id/imageView4"
                            app:layout_constraintEnd_toEndOf="@+id/imageView4" android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/imageView4"
                    />
                    <ImageView
                            android:src="@drawable/ic_account_box_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView7" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                    />
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toTopOf="@+id/superviser_layout"
                        app:layout_constraintTop_toBottomOf="@+id/event_detail_layout"
                        app:layout_constraintStart_toStartOf="@+id/event_detail_layout"
                        app:layout_constraintEnd_toEndOf="@+id/event_detail_layout" style="@style/Dividers"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/superviser_layout"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp" app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        app:layout_constraintHorizontal_bias="1.0" android:layout_marginTop="16dp"
                        app:layout_constraintTop_toBottomOf="@+id/divider2" android:layout_marginBottom="16dp"
                        app:layout_constraintBottom_toTopOf="@+id/divider3">

                    <ImageView
                            android:src="@drawable/ic_supervisor_account_black_24dp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/imageView2" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                    />
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="0dp"
                            android:id="@+id/supervisor_label"
                            android:gravity="center_vertical"
                            app:layout_constraintTop_toTopOf="@+id/imageView2"
                            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
                            app:layout_constraintVertical_bias="0.0"
                            app:layout_constraintStart_toEndOf="@+id/imageView2"
                            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <View
                        android:id="@+id/divider3"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        app:layout_constraintBottom_toTopOf="@id/recycler_view_layout"
                        app:layout_constraintTop_toBottomOf="@+id/superviser_layout"
                        app:layout_constraintEnd_toEndOf="@+id/superviser_layout"
                        app:layout_constraintStart_toStartOf="@+id/superviser_layout"
                        style="@style/Dividers"/>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintTop_toBottomOf="@+id/divider3"
                        app:layout_constraintStart_toStartOf="@+id/superviser_layout"
                        app:layout_constraintEnd_toEndOf="@+id/superviser_layout"
                        android:id="@+id/recycler_view_layout"
                        android:layout_marginTop="16dp">

                    <ImageView
                            android:src="@drawable/ic_download"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content" android:id="@+id/fragment_event_details_download_images"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
                            />
                    <androidx.recyclerview.widget.RecyclerView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:id="@+id/event_details_picture_gallery_recycler_view" android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/fragment_event_details_download_images"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.github.clans.fab.FloatingActionMenu
                android:id="@+id/fragment_event_detail_fab_menu"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                fab:menu_animationDelayPerItem="50"
                fab:menu_backgroundColor="@android:color/transparent"
                fab:menu_buttonSpacing="0dp"
                fab:menu_colorNormal="@color/colorPrimaryLight"
                fab:menu_colorPressed="@color/colorPrimaryDark"
                fab:menu_colorRipple="#99FFFFFF"
                fab:menu_icon="@drawable/ic_add_white"
                fab:menu_labels_colorNormal="#333333"
                fab:menu_labels_colorPressed="#FFFFFF"
                fab:menu_labels_colorRipple="#66FFFFFF"
                fab:menu_labels_cornerRadius="3dp"
                fab:menu_labels_ellipsize="none"
                fab:menu_labels_hideAnimation="@anim/fab_slide_out_to_right"
                fab:menu_labels_margin="0dp"
                fab:menu_labels_maxLines="-1"
                fab:menu_labels_padding="8dp"
                fab:menu_labels_paddingBottom="4dp"
                fab:menu_labels_paddingLeft="8dp"
                fab:menu_labels_paddingRight="8dp"
                fab:menu_labels_paddingTop="4dp"
                fab:menu_labels_position="left"
                fab:menu_labels_showAnimation="@anim/fab_slide_in_from_right"
                fab:menu_labels_showShadow="true"
                fab:menu_labels_singleLine="false"
                fab:menu_labels_textColor="#FFFFFF"
                fab:menu_labels_textSize="14sp"
                fab:menu_openDirection="up"
                fab:menu_shadowColor="#66000000"
                fab:menu_shadowRadius="4dp"
                fab:menu_shadowXOffset="1dp"
                fab:menu_shadowYOffset="3dp"
                fab:menu_showShadow="true"
                fab:menu_labels_style="@style/MenuLabelsStyle">
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_event_detail_fab_add_galery"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_add_image_white"
                    fab:fab_size="mini"
                    fab:fab_label="Add Galery"
                    fab:fab_colorNormal="@color/colorPrimaryLight"
                    fab:fab_colorPressed="@color/colorPrimaryDark"
                    fab:fab_colorRipple="#99FFFFFF"/>
            <com.github.clans.fab.FloatingActionButton
                    android:id="@+id/fragment_event_detail_fab_add_camera"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_photo_camera_black_24dp"
                    fab:fab_size="mini"
                    fab:fab_label="Add camera"
                    fab:fab_colorNormal="@color/colorPrimaryLight"
                    fab:fab_colorPressed="@color/colorPrimaryDark"
                    fab:fab_colorRipple="#99FFFFFF"/>
        </com.github.clans.fab.FloatingActionMenu>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>