<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                   xmlns:app="http://schemas.android.com/apk/res-auto"
                                   xmlns:tools="http://schemas.android.com/tools" android:layout_width="wrap_content"
                                   android:layout_marginEnd="4dp"
                                   android:layout_marginTop="4dp"
                                   android:layout_marginLeft="4dp"
                                   android:layout_marginRight="4dp"
                                   android:layout_height="wrap_content">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:id="@+id/event_details_card_view">

        <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp" tools:srcCompat="@tools:sample/avatars"
                android:id="@+id/event_details_ressource_photo" app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" tools:srcCompat="@drawable/ic_star_black_24dp" android:id="@+id/user_details_photo_is_user_picture"
                app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="4dp" android:layout_marginTop="4dp"
                app:layout_constraintTop_toTopOf="@+id/event_details_ressource_photo"/>
        <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp" tools:srcCompat="@drawable/ic_check_black_24dp"
                android:id="@+id/user_details_photo_is_checked"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="4dp"
                app:layout_constraintTop_toTopOf="@+id/user_details_photo_is_user_picture"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>