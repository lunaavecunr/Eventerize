<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".presentation.ui.fragments.CreateEventFragment">


    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.Toolbar
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:theme="?attr/actionBarTheme"
                android:minHeight="?attr/actionBarSize"
                android:id="@+id/create_event_fragment_toolbar"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/create_event_fragment_toolbar" android:id="@+id/scrollView2">
            <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/constraintLayout5"
            >

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout2"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout2"
                        android:id="@+id/constraintLayout4"
                        app:layout_constraintBottom_toTopOf="@+id/manage_invitations"
                        app:layout_constraintTop_toTopOf="parent">

                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content" android:id="@+id/constraintLayout6"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintEnd_toEndOf="parent">

                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                app:layout_constraintWidth_percent="0.5"
                                android:layout_height="wrap_content" app:layout_constraintEnd_toEndOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintBottom_toBottomOf="parent"
                                android:id="@+id/begin_hour_layout"
                                app:layout_constraintStart_toEndOf="@+id/begin_date_layout">

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    style="@style/StyledEditText"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintBottom_toBottomOf="parent"
                                    android:hint="@string/begin_hour_event" android:id="@+id/begin_hour_text_input">

                                <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:inputType="none"
                                        android:id="@+id/begin_hour_edit_text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:id="@+id/begin_date_layout"
                                app:layout_constraintStart_toStartOf="parent"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/begin_hour_layout">
                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    style="@style/StyledEditText"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:id="@+id/begin_date_text_input" android:hint="@string/begin_date_event">

                                <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:inputType="none"
                                        android:id="@+id/begin_date_edit_text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>
                    <androidx.constraintlayout.widget.ConstraintLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/constraintLayout6"
                            app:layout_constraintStart_toStartOf="parent" app:layout_constraintEnd_toEndOf="parent">
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:id="@+id/end_date_layout"
                                app:layout_constraintWidth_percent="0.5"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintEnd_toStartOf="@+id/end_hour_layout">

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    style="@style/StyledEditText"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    android:hint="@string/end_date_event_label"
                                    app:layout_constraintEnd_toEndOf="parent" android:id="@+id/end_date_edit_text">

                                <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:focusable="false"
                                        android:clickable="true"
                                        android:layout_height="wrap_content"
                                        android:id="@+id/end_day_edit_text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                        <androidx.constraintlayout.widget.ConstraintLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                app:layout_constraintTop_toTopOf="parent"
                                app:layout_constraintWidth_percent="0.5"
                                android:id="@+id/end_hour_layout"
                                app:layout_constraintEnd_toEndOf="parent">

                            <com.google.android.material.textfield.TextInputLayout
                                    android:layout_width="0dp"
                                    style="@style/StyledEditText"
                                    android:layout_height="wrap_content"
                                    app:layout_constraintStart_toStartOf="parent"
                                    app:layout_constraintTop_toTopOf="parent"
                                    app:layout_constraintEnd_toEndOf="parent"
                                    android:hint="@string/end_hour_event_label"
                                    android:id="@+id/end_time_edit_text">

                                <com.google.android.material.textfield.TextInputEditText
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:focusable="false"
                                        android:inputType="none"
                                        android:id="@+id/end_hour_edit_text"/>
                            </com.google.android.material.textfield.TextInputLayout>
                        </androidx.constraintlayout.widget.ConstraintLayout>
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="parent"
                        android:layout_marginStart="16dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:layout_marginEnd="16dp"
                        android:id="@+id/constraintLayout2"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout"
                        app:layout_constraintBottom_toTopOf="@+id/constraintLayout4">
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            style="@style/StyledEditText"
                            android:id="@+id/event_title_input_layout"
                            android:hint="@string/event_title_hint">

                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:id="@+id/event_creation_title_text"/>
                    </com.google.android.material.textfield.TextInputLayout>
                    <com.google.android.material.textfield.TextInputLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:layout_constraintTop_toBottomOf="@+id/event_title_input_layout"
                            app:layout_constraintStart_toStartOf="@+id/event_title_input_layout"
                            app:layout_constraintEnd_toEndOf="@+id/event_title_input_layout"
                            app:layout_constraintBottom_toBottomOf="parent"
                            style="@style/StyledEditText"
                            android:hint="@string/event_location_hint"
                            android:id="@+id/event_location_layout">

                        <com.google.android.material.textfield.TextInputEditText
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                        />
                    </com.google.android.material.textfield.TextInputLayout>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="192dp"
                        android:layout_height="178dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        android:id="@+id/constraintLayout"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintBottom_toTopOf="@+id/constraintLayout2">
                    <ImageView
                            android:layout_width="@android:dimen/thumbnail_width"
                            android:layout_height="@android:dimen/thumbnail_height"
                            android:id="@+id/event_creation_logo"
                            android:clickable="true"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        app:layout_constraintStart_toStartOf="@+id/constraintLayout4"
                        app:layout_constraintEnd_toEndOf="@+id/constraintLayout4"
                        app:layout_constraintTop_toBottomOf="@+id/constraintLayout4"
                        android:id="@+id/manage_invitations"
                        app:layout_constraintHorizontal_bias="0.6"
                        app:layout_constraintBottom_toTopOf="@+id/generate_event">

                    <TextView
                            android:text="@string/generate_invitations"
                            android:layout_width="wrap_content"
                            android:clickable="true"
                            android:layout_height="30dp" android:id="@+id/manage_invitations_label"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:id="@+id/generate_event"
                        app:layout_constraintStart_toStartOf="@+id/manage_invitations"
                        app:layout_constraintEnd_toEndOf="@+id/manage_invitations"
                        app:layout_constraintTop_toBottomOf="@+id/manage_invitations"
                        app:layout_constraintBottom_toBottomOf="parent">
                    <Button
                            android:text="@string/generate_event"
                            android:layout_width="0dp"
                            style="@style/Button"
                            android:layout_height="wrap_content" android:id="@+id/validate_event"
                            app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintBottom_toBottomOf="parent"/>
                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
        <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:src="@drawable/ic_photo_camera_black_24dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:id="@+id/add_logo_floating_button"
                android:layout_marginBottom="32dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="32dp" app:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>